---
let { date, info, address, tickets } = Astro.props;
---

<div class="flex flex-row gap-2">
  <div
    class="w-28 h-28 text-3xl font-[EditorialNewRegular] shadow-emerald-400 shadow-md"
  >
    {date}
  </div>
  <div class="text-lg text-white font-[BebasNeueProRegular] text-wrap">
    <p>{info}</p>
    <p>{address}</p>
    <a href={tickets} class="underline hover:text-blue-600">tickets</a>
  </div>
</div>
